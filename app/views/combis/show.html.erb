
<% if @combi && @combi.photo_url %>
  <div class="banner" style="background-image: url(<%= cl_image_path @combi.photo %>)">
  </div>
<% end %>
<div class="white-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8">
        <div class="combi_info">
          <div class="model">
            <h3>Model:<%= @combi.model %></h3>
          </div>
          <div class="description">
            <p><%= @combi.description %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="reservation_card">
          <h3>Combi road trip</h3>
          <!-- A modifier avec la recherche-->
          <p>Booking date:</p>
          <h5>12/08/2018</h5>
          <p>Address pick up:</p>
          <h5>
            <%= "#{@combi.address} #{@combi.city}" %>
          </h5>
          <p>Price per day:</p>
          <h5><%= @combi.price %> â‚¬</h5>
          <%= link_to "Book it now!", dashboard_path,
            class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
