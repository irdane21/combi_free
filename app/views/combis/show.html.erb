<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url('<%= image_path("combishow.jpeg") %>')">
</div>

<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="combi_info">
          <h3><%= @combi.model %></h3>
          <p><%= @combi.description %></p>
          <p><%= "#{@combi.address} #{@combi.city}" %></p>
          <h3><%= @combi.price %> €</h3>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="reservation_card">
          <h2>Book This Combi Now!</h2>
          <p>The date:</p>
          <p>12/08/2018</p>
          <p>Pick it up at:</p>
          <p><%= "#{@combi.address} #{@combi.city}" %></p>
          <p>For:</p>
          <p><%= @combi.price %> €</p>
          <%= link_to "Book it!", @dashboard_path,
            class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>



